{
  "documentation": {
    "title": "Render ListViewItem",
    "copyright": "CopyrightÂ© CivicConnect, 2018"
  },
  "place": "rugby",
  "constants": {
    "searchTerm": "Coach"
  },
  "render": [
    {
      "row": "+1",
      "type": "renderText",
      "properties": {
        "text": {
          "template": "List Item using a search for the word '@{searchTerm}'",
          "variables": {
            "searchTerm": ".constants.searchTerm"
          }
        },
        "style": ".documentation.styles.headerText"
      },
      "style": ".documentation.styles.header"
    },
    {
      "row": "+1",
      "type": "renderListViewItem",
      "style": {
        "marginBottom": 20
      },
      "properties": {
        "header": "Header",
        "footer": "Footer",
        "placeHolderData": {
          "loadingText": "Loading Data..."
        },
        "action": [
          {
            "when": "onDataLoaded",
            "action": "setCurrentPOI",
            "actionCreator": {
              "find": {
                "term": ".constants.searchTerm",
                "resultsPath": {
                  "template": ".@{ref}.items[0].item",
                  "variables": {
                    "ref": "rugby"
                  }
                }
              },
              "actionResult": {
                "savePath": "templateItem",
                "path": ".settings.current.currentPOI",
                "useAsData": {
                  "path": true
                }
              }
            }
          }
        ]
      }
    }
  ]
}