    {
      "row": "+1",
      "type": "renderText",
      "style": ".constants.textPosition",
      "properties": {
        "text": "Netflix",
        "style": ".constants.textStyle",
        "action": {
          "action": "modalWebview",
          "url": "http://www.netflix.com"
        }
      }
    }
  ]
